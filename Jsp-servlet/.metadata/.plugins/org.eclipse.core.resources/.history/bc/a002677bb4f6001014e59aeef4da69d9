<script>
	function togglePassword() {
		var pwd = document.getElementById("password");
		if (pwd.type === "password") {
			pwd.type = "text";
		} else {
			pwd.type = "password";
		}
	}
</script>
</head>
<body>

	<div align="center">

		<form>
